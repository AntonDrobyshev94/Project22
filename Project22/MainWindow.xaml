<Window x:Class="Project22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project22"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ConvertButton" Grid.Column="1" Grid.Row="3" Content="Конвертировать"/>
        <TextBox x:Name="StringText" TextAlignment="Center" TextWrapping="Wrap" Text="" Grid.Column="1" Grid.Row="1"/>
        <TextBlock x:Name="ConvertResultTextBlock" TextWrapping="Wrap" TextAlignment="Center" Text="" Grid.Column="1" Grid.Row="5"/>
    </Grid>
</Window>
